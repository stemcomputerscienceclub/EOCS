<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - EOCS</title>
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/animations.css">
</head>
<body>
    <!-- Simple Navigation -->
    <nav class="main-nav">
        <div class="nav-logo">
            <a href="/">
                <img src="/assets/images/eocs-logo.svg" alt="EOCS Logo" class="logo">
            </a>
        </div>
        <a href="/" class="back-link">‚Üê Back to Home</a>
    </nav>

    <!-- Auth Container -->
    <div class="auth-container">
        <%- body %>

        <!-- Decorative Elements -->
        <div class="auth-decorative-elements">
            <div class="element dna"></div>
            <div class="element math"></div>
            <div class="element chemistry"></div>
            <div class="element hieroglyph"></div>
        </div>
    </div>

    <script src="/js/main.js"></script>
    <% if (locals.additionalScripts) { %>
        <% additionalScripts.forEach(function(script) { %>
            <script src="<%= script %>"></script>
        <% }); %>
    <% } %>
</body>
</html>