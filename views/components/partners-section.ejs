<section class="partners-section">
    <div class="container">
        <h2>Partners & Sponsors</h2>
        <div class="partners-grid">
            <div class="partner-card">
                <img src="/assets/images/mcit-logo.svg" alt="MCIT Logo" class="partner-logo">
                <div class="partner-content">
                    <h3>Ministry of Communications and Information Technology Egypt</h3>
                    <p>Government Support Partner</p>
                </div>
            </div>
            <div class="partner-card">
                <img src="/assets/images/eui-logo.svg" alt="EUI Logo" class="partner-logo">
                <div class="partner-content">
                    <h3>Egypt University of Informatics</h3>
                    <p>Strategic Educational Partner</p>
                </div>
            </div>

            <div class="partner-card sponsor">
                <div class="sponsor-placeholder">
                    <h3>Become a Sponsor</h3>
                    <p>Join us in fostering innovation</p>
                    <a href="/contact" class="cta-secondary">Contact Us</a>
                </div>
            </div>
        </div>
        <% if (locals.showAllPartners) { %>
        <div class="additional-partners">
            <h3>Supporting Partners</h3>
            <div class="partners-grid secondary">
                <!-- Additional partners can be added here -->
            </div>
        </div>
        <% } %>
    </div>
</section>