<section class="eligibility-section">
    <div class="container">
        <h2>Eligibility & Rules</h2>
        <div class="eligibility-grid">
            <div class="eligibility-card">
                <h3>High School</h3>
                <ul class="eligibility-list">
                    <li>Students in grades 10-12</li>
                    <li>Age: 15-18 years</li>
                    <li>Team size: 2-3 members</li>
                    <li>School approval required</li>
                </ul>
            </div>
            <div class="eligibility-card">
                <h3>University</h3>
                <ul class="eligibility-list">
                    <li>Undergraduate students</li>
                    <li>Age: 18-22 years</li>
                    <li>Team size: 2-4 members</li>
                    <li>Valid university ID required</li>
                </ul>
            </div>
        </div>
        <% if (locals.showSteps) { %>
        <div class="steps">
            <div class="step-card">
                <img src="" alt="icon">
                <h3>Team Formation</h3>
                <p>Form your own team or get matched with qualified individuals</p>
            </div>
            <div class="step-card">
                <img src="" alt="icon">
                <h3>Eligibility</h3>
                <p>Opening to all students residing in Egypt</p>
            </div>
            <div class="step-card">
                <img src="" alt="icon">
                <h3>Registration</h3>
                <p>Register before the deadline - no late entries accepted</p>
            </div>
            <div class="step-card">
                <img src="" alt="icon">
                <h3>Prerequisites</h3>
                <p>Basic knowledge in computational science required</p>
            </div>
        </div>
        <% } %>
    </div>
</section>